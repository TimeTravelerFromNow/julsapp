<p style="color: green"><%= notice %></p>

<%= render @category %>

<div id="blog_posts">

    <% @blog_posts.each do  |blog_post| %>

      <%= link_to blog_post_path(blog_post), class: 'text-decoration-none' do  %>
        <%= render "blog_posts/bp_card", blog_post: blog_post %>
      <% end %>
    <% end %>

</div>
<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div>
