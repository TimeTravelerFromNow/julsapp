<%= form_with(model: music) do |form| %>
  <% if music.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(music.errors.count, "error") %> prohibited this music from being saved:</h2>

      <ul>
        <% music.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :music_file, style: "display: block" %>
    <%= form.file_field :music_file %>
  </div>
  <div>
    <%= form.label :has_single_cover, style: "display: block" %>
    <div data-action="click->musics#checkBoxClicked">
      <%= form.check_box :has_single_cover %>
    </div>
    <div data-musics-target="singleCoverImage" class="single-cover-image show">
      <%= form.label :single_cover_image, style: "display: block" %>
      <%= form.file_field :single_cover_image %>
    </div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
