<p style="color: green"><%= notice %></p>



<div  id="albums" class="row">

  <% @albums.each do |album| %>


  <%= link_to album, class:"album-img",
  style:"--album-cover-image: url(#{ url_for(album.album_cover_image ) });" do %>
  <div class="card album-name">
    <%= album.name %>
    </div>
  <% end %>


  <% end %>
</div>
