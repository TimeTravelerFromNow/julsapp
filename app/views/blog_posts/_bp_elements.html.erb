
<% blog_post.elements.each do |element| %>

<%if element.persisted? %>
persisted element
<% else %>
nonpersisted element.
<% end %>

<% if element.paragraph? %>
<div class="paragraph mb-3 mb-4">
              <div class="paragraph-content">
                <% if element.content.present? %>
                <%= element.content %>
                <% else %>
                click to add content!
                <% end %>
              </div>
              <div class="paragraph-form d-none">
        <%= form_with(model: [blog_post, element]) do |form| %>
                <%= form.rich_text_area :content %>

                <div class="mt-3 d-flex justify-content-between">
                  <div>
                    <%= form.submit class: 'btn btn-primary' %>
                  </div>
                </div>
                <a href="#" class="cancel btn btn-dark">Cancel</a>
                <%= link_to 'Delete', blog_post_element_path(blog_post, element),
                  class: 'btn btn-danger',
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
              </div>
            </div>
<% end %>

<% if element.image? %>
<div class="image">
                <% if element.image.present? %>
                  <%= image_tag(element.image) %>
                  <%= link_to 'Delete', blog_post_element_path(blog_post, element),
                    class: 'delete-btn btn btn-danger',
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                <% else %>
                  <%= form_with(model: [blog_post, element]) do |form| %>
                    <div class="mt-3">
                      <%= form.file_field :image %>
                      <%= form.submit class: 'btn btn-primary' %>
                      <%= link_to 'Delete', blog_post_element_path(blog_post, element),
                        class: 'btn btn-dark',
                        data: { turbo_method: :delete} %>
                    </div>

                  <% end %>
                <% end %>
              </div>
<% end %>



<% end %>
